	<insert id="writeArticle" parameterType="boardDto">
		insert into board (title, content, user_id, user_name, `like`, register_time, image_path)
	  	values (
		    #{title},
		    #{content},
		    #{userId},
		    (SELECT user_name FROM member WHERE user_id = #{userId}),
		    0,
		    now(),
		    #{imagePath}
 			)
	</insert>
	
